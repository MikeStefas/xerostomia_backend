generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userID        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String   @default("-")
  lastName String @default("-")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role     String   @default("USER")
  institution String @default("-")
}

model Report {
  id        Int      @id @default(autoincrement())
  userID    Int 
  email     String
  createdAt DateTime @default(now())
  tongue  String
  tonguePercentage Int
  teeth   String
  teethPercentage Int
  saliva  String
  salivaPercentage Int
  painSolid  String
  painLiquid String
  painMixed String
  painPercentage Int

}

model Supervisors {
  id          Int      @id @default(autoincrement())
  clinicianID Int      
  userID      Int
}

model UserData {
  id Int @id @default(autoincrement())
  userID Int
  yearOfBirth Int
  gender String
}